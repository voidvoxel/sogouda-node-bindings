{
  "name": "@sogouda/bindings",
  "version": "0.1.5",
  "description": "A set of JavaScript/TypeScript bindings for Sogouda",
  "main": "dist/index.node",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "cargo test",
    "build:cargo": "cargo build --message-format=json > cargo.log",
    "build:cross": "cross build --message-format=json > cross.log",
    "postbuild:cargo": "neon dist < cargo.log",
    "postbuild:cross": "neon dist -m /target < cross.log",
    "debug": "npm run build:cargo --",
    "build": "npm run build:native && npm run build:types",
    "build:dist": "shx rm -rf dist && shx mkdir -p dist && shx mv index.* dist/",
    "build:native": "npm run build:cargo -- --release",
    "build:types": "tsc",
    "clean": "shx rm -f index.d.ts index.d.ts.map index.node",
    "cross": "npm run build:cross -- --release",
    "prepublish": "npm run build",
    "rebuild": "npm run clean && npm run build"
  },
  "author": "Ashlynne Juniper",
  "license": "MPL-2.0",
  "devDependencies": {
    "@neon-rs/cli": "0.1.68",
    "shx": "^0.3.4",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sogouda/node-bindings.git"
  },
  "keywords": [
    "sogouda",
    "bindings",
    "node",
    "deno",
    "bun"
  ],
  "bugs": {
    "url": "https://github.com/sogouda/node-bindings/issues"
  },
  "homepage": "https://github.com/sogouda/node-bindings#readme"
}
